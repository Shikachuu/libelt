{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://libelt.picloud.hu/schemas/tool-collection.json",
  "title": "ToolCollection",
  "description": "A collection of developer tools for the libelt catalog",
  "type": "object",
  "required": ["tools"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference for IDE validation"
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "categories", "github"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "The display name of the tool"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "A brief description of what the tool does"
          },
          "categories": {
            "type": "array",
            "minItems": 1,
            "maxItems": 10,
            "uniqueItems": true,
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 50
            },
            "description": "Categories this tool belongs to"
          },
          "github": {
            "type": "string",
            "format": "uri",
            "pattern": "^https://github\\.com/[^/]+/[^/]+$",
            "description": "GitHub repository URL"
          }
        }
      }
    }
  }
}
